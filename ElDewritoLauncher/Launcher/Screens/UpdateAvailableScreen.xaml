<UserControl
    x:Class="EDLauncher.Launcher.Screens.UpdateAvailableScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450" d:DesignWidth="800" mc:Ignorable="d">
    <Grid>
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock Margin="0,0,0,0" FontSize="28" Foreground="#f8f8f8" Text="Update Available" TextAlignment="Center" />
            <StackPanel Margin="0,20,0,0" Orientation="Vertical">
                <TextBlock x:Name="txtVersion" Margin="0,4" d:Text="Version: 0.6.1-debug.1692554830" FontSize="18" TextAlignment="Center" />
                <TextBlock x:Name="txtDownloadSize" d:Text="Download Size: 200 MB" FontSize="18" TextAlignment="Center" />
            </StackPanel>
            <Button
                x:Name="btnUpdateNow" Width="130" Height="40" Margin="0,50,0,0"
                Click="btnUpdateNow_Clicked" Content="Update Now" FontSize="14"
                Style="{StaticResource L_PrimaryButtonStyle}" />
        </StackPanel>
    </Grid>
</UserControl>
